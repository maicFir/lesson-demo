
[class*=el-col-],[class*=el-row]{
  padding:0px !important;
  margin:0px !important;
}
.el-tabs__nav-wrap{
  margin-left:12px;
}
.specil-container {
  width:100%;
  height:100%;
  padding: 0px 0px 0px 27px;
  overflow-x: hidden;
  background-color: rgb(242,242,242);
  margin-left: 180px;
}
.el-tabs__header{
  margin-bottom:17px;
}
.btn-ofset-10 {
  margin-left: 10px;
}

.card-title {
  font-size: 16px;
  font-weight: bold;
  color: #000;
}

.box-card {
  padding: 15px 16px 14px 16px;
  text-align: left;
  margin: 15px 12px;
  .dec {
    display: inline-block;
    width: 62px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    margin: 10px 0px 0px;
    font-size: 13px;
    color: #fff;
    background-color: #4a90e2;
    border-radius: 4px;
    -webkit-border-radius: 4px;
  }

  .card-header {
    font-size: 16px;
    color: #000000;
  }

  .card-content {
    font-size: 13px;
    color: #000;

    li {
      border-bottom: 1px solid #e9e9e9 !important;

      h2.CommissionNumber {
        min-width: 150px;
        display: inline-block;
        font-weight: bold;
        padding: 21px 0px 6px;
      }
    }
  }

  .send {
    overflow: hidden;
    cursor: pointer;
    padding: 14px 6px 14px 0px;

    >.option {
      font-family: PingFangSC-Semibold;
      font-size: 13px;
      position: relative;
    }

    >.active, .hasactive {
      &:before {
        content: '';
        display: inline-block;
        width: 18px;
        height: 18px;
        border-radius: 100%;
        -webkit-border-radius: 100%;
        position: absolute;
        left: 45px;
        top:1px;
      }

      &:after {
        content: '';
        display: inline-block;
        width: 5px;
        height: 5px;
        border: 1px solid #fff;
        position: absolute;
        left: 49px;
        top: 7px;
        border-bottom: none;
        border-left: none;
        transform: rotate(45deg);
        -webkit-transform: rotate(45deg);
      }
    }

    >.active {
      color: #2770E9;

      &:before {
        background: #2770E9;
      }
    }

    >.hasactive {
      color: #ccc;

      &:before {
        background: #ccc;
      }
    }
  }

  .el-card__body {
    padding: 0px;
  }
}
@media only screen and (min-width: 1200px) {
  .specil-container {
    .el-col-lg-8{
      width: 28.9% !important;
    }
  }
}
